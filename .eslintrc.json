{
	"env": {
		"browser": true,
		"commonjs": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "airbnb-base", "prettier", "plugin:react/recommended"],
	"plugins": ["prettier", "react"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "always"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"no-tabs": 0,
		"prettier/prettier": ["error"],
		"no-console": 1,
		"no-shadow": "off",
		"no-use-before-define": [
			"error",
			{
				"functions": true,
				"classes": true,
				"variables": true,
				"allowNamedExports": false
			}
		],
		"no-param-reassign": ["error", { "props": false }],
		"sort-keys": "error",
		"no-unused-vars": "error",
		"no-var": "error",
		"eqeqeq": ["error", "always"],
		"no-empty-function": ["error", { "allow": ["methods"] }],
		"no-else-return": ["error", { "allowElseIf": true }],
		"no-nested-ternary": "error"
	}
}
